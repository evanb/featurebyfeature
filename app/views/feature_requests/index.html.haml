- @title = 'Feature Requests'

- form_for @new_feature_request do |f|
  = f.text_field :description, :size => 100
  = f.submit 'Add Feature Request'


#tabs
  %ul
    %li
      %a{:href => '#backlog-tab'}
        %span Backog
    %li
      %a{:href => '#done-tab'}
        %span Done
  #backlog-tab
    %table{:id => 'backlog_feature_requests'}
      %thead
        %tr
          %th Description
          %th Votes
      %tbody
        - @backlog_feature_requests.each do |feature_request|
          %tr
            %td
              = feature_request.description
              - if logged_in? and feature_request.status != FeatureRequest::DONE_STATUS
                = link_to "Done!", {:action => :done, :id => feature_request.id}, {:method => :put}
            %td
              %span{:id => "vote#{feature_request.id}"}= feature_request.votes
              = link_to_remote "+1", :url => vote_feature_request_url(feature_request.id), :method => :put, :success => "$('#vote#{feature_request.id}').text(request)"
  #done-tab
    %table{:id => 'backlog_feature_requests'}
      %thead
        %tr
          %th Description
          %th Votes
          %th Completed On
      %tbody
        - @done_feature_requests.each do |feature_request|
          %tr
            %td= feature_request.description
            %td= feature_request.votes
            %td= feature_request.updated_at.to_formatted_s(:short)

= javascript_tag '$("#tabs").tabs();'
